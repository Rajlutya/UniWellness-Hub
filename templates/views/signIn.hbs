<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UniWellness Hub - Sign In</title>
    <link rel="stylesheet" href="/CSS/style.css">
</head>

<body>
    {{>navbar}}
    <div class="signin">
        <h2>Sign In</h2>
        <form id="signinForm">
            <input type="text" name="email" placeholder="User Id" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Sign In</button>
        </form>
        <a href="/forgotpassword">Forgot Password?</a>
        <a href="/registerationpage">New User?</a>
    </div>

    <script>
        document.getElementById('signinForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Prevent the default form submission

            const form = event.target;
            const formData = new FormData(form);

            const data = {
                email: formData.get('email'),
                password: formData.get('password')
            };

            //Sending JSON data to the backend using fetch API
            try {
                const response = await fetch('/signin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    window.location.href =result.redirectUrl;
                } else {
                    alert(result.message);
                }
                    
            } catch (error) {
                // Handle error
                console.error('There was a problem with the fetch operation:', error);
                alert("There was a problem with the sign-in process. Please try again.");
            }
        });
    </script>
</body>
</html>