<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Help Requests</title>
    <link rel="stylesheet" href="/CSS/admin.css">
</head>
<body>
    {{> adminnav}}
    <div class="helpRequests">
        <h1>Help Requests</h1>
        <table>
            <thead>
                <tr>
                    <th>Serial No.</th>
                    <th>Request Date</th>
                    <th>Request Time</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Issue</th>
                    <th>Duration</th>
                    <th>Description</th>
                    <th>History</th>
                    <th>Assign Counselor</th>
                </tr>
            </thead>
            <tbody>
                {{#each helpRequests}}
                <tr>
                    <td>{{serialNo}}</td>
                    <td>{{dateFormatted}}</td>
                    <td>{{timeFormatted}}</td>
                    <td><a href="/profile/{{studentId}}">{{studentName}}</a></td>
                    <td>{{studentEmail}}</td>
                    <td>{{issue}}</td>
                    <td>{{duration}}</td>
                    <td>{{description}}</td>
                    <td>{{history}}</td>
                    <td class="actions">
                        <form action="/helpRequests/{{_id}}/assign" method="POST">
                            <select name="counselorId" required>
                                <option value="" disabled selected>Select Counselor</option>
                                {{#each ../counselors}}
                                <option value="{{_id}}">{{name}}</option>
                                {{/each}}
                            </select>
                            <button type="submit">Assign</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
