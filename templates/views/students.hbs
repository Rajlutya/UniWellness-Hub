<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
    <link rel="stylesheet" href="/CSS/admin.css">
</head>
<body>
    {{> adminnav}}
    <div class="students">
        <h1>Students List</h1>

        <!-- Search form -->
        <div class="search-container">
            <form action="/students/search" method="GET">
                <input type="text" placeholder="Search by name..." name="search">
                <button type="submit">Search</button>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Serial No.</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <td>{{@index}}</td>
                    <td><a href="/profile/{{this._id}}">{{this.name}}</a></td>
                    <td>{{this.email}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script>
        // Adjust serial numbers to start from 1
        document.addEventListener("DOMContentLoaded", () => {
            const serialNumberCells = document.querySelectorAll("tbody tr td:first-child");
            serialNumberCells.forEach((cell, index) => {
                cell.textContent = index + 1;
            });
        });
    </script>
</body>
</html>
