<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{student.name}}'s Profile</title>
    <link rel="stylesheet" href="/CSS/counselor.css">
</head>
<body>
    {{> nevcounselor}}
    <div class="studentsProfile">
        <h1>{{student.name}}'s Profile</h1>
        
        <!-- Basic Details Section -->
        <div class="basic-details">
            <h2>Basic Details</h2>
            <ul>
                <li>Name: {{student.name}}</li>
                <li>Email: {{student.email}}</li>
                <li>Phone: {{student.phone}}</li>
                <li>Age: {{student.age}}</li>
                <li>Gender: {{student.gender}}</li>
                <li>Role: {{student.role}}</li>
            </ul>
        </div>
        
        <!-- Past History Section -->
        <h2>Past History</h2>
        <table>
            <thead>
                <tr>
                    <th>Serial No.</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Issue</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Counselor</th>
                    <th>Prescription</th>
                </tr>
            </thead>
            <tbody>
                {{#each pastHistory}}
                <tr>
                    <td>{{this.SerialNo}}</td>
                    <td>{{this.formattedDate}}</td>
                    <td>{{this.formattedTime}}</td>
                    <td>{{this.issue}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.counselorName}}</td>
                    <td>{{this.prescription}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
